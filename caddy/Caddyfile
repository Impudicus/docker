ts673a.local, *.ts673a.local {
    tls internal

    @portainer host portainer.ts673a.local
    handle @portainer {
        reverse_proxy portainer:9000 {
            header_up X-Real-IP {remote_host}
        }
    }

    @tautulli host tautulli.ts673a.local
    handle @tautulli {
        reverse_proxy tautulli:8181 {
            header_up X-Real-IP {remote_host}
        }
    }
}

